<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="modules.system.dao.FileDao">
    <sql id="columns">
        o.`CODE`,
        o.IS_DEL AS 'isDel',
        o.REMARKS,
        o.CREATED_TIME,
        o.UPDATED_TIME,
        o.VERSION,
        o.`NAME`,
        o.URI,
        o.TYPE,
        o.FORMAT,
        o.SIZE
    </sql>

    <sql id="tableName">
        sys_file
    </sql>

    <sql id="tableAlias">
        <include refid="tableName"/>
        o
    </sql>

    <sql id="conditions">
        1=1 AND o.IS_DEL = 'n'
        <if test="null != code and '' != code">
            AND o.CODE = #{code}
        </if>
        <if test="null != name and '' != name">
            AND o.NAME = #{name}
        </if>
        <if test="null != type and '' != type">
            AND o.TYPE = #{type}
        </if>
        <if test="null != format and '' != format">
            AND o.FORMAT = #{format}
        </if>
        <if test="null != remarks and '' != remarks">
            AND o.REMARKS = #{remarks}
        </if>
    </sql>

    <select id="count" resultType="java.lang.Long">
        SELECT COUNT(1)
        FROM
        <include refid="tableAlias"/>
        WHERE
        <include refid="conditions"/>
    </select>

    <select id="findOne" resultType="modules.system.model.File">
        SELECT
        <include refid="columns"/>
        FROM
        <include refid="tableAlias"/>
        WHERE
        <include refid="conditions"/>
    </select>

    <select id="findAll" resultType="modules.system.model.File">
        SELECT
        <include refid="columns"/>
        FROM
        <include refid="tableAlias"/>
        WHERE
        <include refid="conditions"/>
    </select>

    <select id="findPage" resultType="modules.system.model.File">
        SELECT
        <include refid="columns"/>
        FROM
        <include refid="tableAlias"/>
        WHERE
        <include refid="conditions"/>
        <if test="null != index and null != size and 0 != size">
            LIMIT #{index},#{size}
        </if>
    </select>

    <insert id="insert">
        INSERT INTO
        <include refid="tableName"/>(
        `CODE`,
        IS_DEL,
        REMARKS,
        CREATED_TIME,
        UPDATED_TIME,
        VERSION,
        `NAME`,
        URI,
        `TYPE`,
        FORMAT,
        `SIZE`
        ) VALUES (
        #{code},
        #{isDel},
        #{remarks},
        #{createdTime},
        #{updatedTime},
        #{version},
        #{name},
        #{uri},
        #{type},
        #{format},
        #{size}
        )
    </insert>

    <update id="update">
        UPDATE
        <include refid="tableName"/>
        SET
        IS_DEL = #{isDel},
        REMARKS = #{remarks},
        CREATED_TIME = #{createdTime},
        UPDATED_TIME = #{updatedTime},
        VERSION = #{version},
        `NAME` = #{name},
        URI = #{uri},
        `TYPE` = #{type},
        FORMAT = #{format},
        `SIZE` = #{size}
        WHERE CODE = #{code}
    </update>

    <delete id="delete">
        DELETE FROM
        <include refid="tableName"/>
        WHERE CODE = #{code}
    </delete>

    <!-- 批量删除 -->
    <delete id="deleteList" parameterType="java.util.List">
        DELETE FROM
        <include refid="tableName"/>
        WHERE CODE in
        <foreach collection="list" item="item" open="(" separator="," close=")">
            #{item.code}
        </foreach>
    </delete>

    <delete id="deleteAll">
        DELETE FROM
        <include refid="tableName"/>
    </delete>
</mapper>
